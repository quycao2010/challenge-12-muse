<div id="posts">
    <% @posts.each do |post| %>
        <div class="post">
            <div class="post_image">
                <%= link_to ( image_tag post.image, class:"img-posts"), post_path(post) %>
            </div>
            <div class="post_content">
                <div class="title">
                    <h2><%= link_to post.title, post_path(post) %></h2>
                </div>
                <div class="data clearfix">
                    <p class="username">Shared by <%= post.user.name %></p>
                    <p class="buttons">
                        <i class="fa fa-comment-o">
                        </i>
                        <%= post.comments.count %>
                        <i class="fa fa-thumbs-o-up">
                        </i>
                        <%= post.get_likes.size %>
                    </p>
                </div>
            </div>
        </div>
    <% end %>
</div>