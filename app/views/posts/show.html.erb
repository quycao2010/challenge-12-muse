<h1>Detail Post</h1>
<%= image_tag @post.image %>
<h2><%= @post.title %></h2>
<p><%= @post.link %></p>
<p><%= @post.description %></p>
<p><%= @post.user.name %></p>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post),method: :delete, data: { confirm: "Are you sure" }  %>
<%= link_to 'Home', root_path %>